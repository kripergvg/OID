@using OID.Web.Models
@model OID.Web.Models.ManageUserViewModel

<form asp-controller="User" asp-action="Manage" method="post" class="form-horizontal">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <div class="col-md-10">
            <div class="row">
                <label asp-for="PhoneMobile" class="col-md-3 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="PhoneMobile.Phone" class="form-control" />
                </div>
                <label asp-for="PhoneMobile.Comment" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="PhoneMobile.Comment" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <div class="row">
                <label asp-for="PhoneWork" class="col-md-3 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="PhoneWork.Phone" class="form-control" />
                </div>
                <label asp-for="PhoneWork.Comment" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="PhoneWork.Comment" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <div class="row">
                <label asp-for="PhoneHome" class="col-md-3 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="PhoneHome.Phone" class="form-control" />
                </div>
                <label asp-for="PhoneHome.Comment" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="PhoneHome.Comment" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <div class="row">
                <label asp-for="PhoneAdditional" class="col-md-3 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="PhoneAdditional.Phone" class="form-control" />
                </div>
                <label asp-for="PhoneAdditional.Comment" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="PhoneAdditional.Comment" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-12">
                    <label asp-for="DeliveryLocationType" style="margin-right: 10px" class="control-label"></label>
                    <input asp-for="DeliveryLocationType" type="radio" data-radio-identifier="deleveryType" value="@AddressType.City" @(Model.DeliveryLocationType= =AddressType.City?"checked":"") /> Город
                    <input asp-for="DeliveryLocationType" type="radio" data-radio-identifier="deleveryType" value="@AddressType.Locality" @(Model.DeliveryLocationType= =AddressType.Locality?"checked":"") /> Населенный пункт
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <div class="row">
                <label asp-for="RegionCode" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <select asp-for="RegionCode" id="regionList" class="form-control" asp-items="@Model.RegionList"></select>
                </div>
            </div>
        </div>
    </div>
    <div data-region="@AddressType.City" data-radio-identifier="deleveryType" style="display: @(Model.DeliveryLocationType==AddressType.City?"block":"none")">
        <div class="form-group">
            <div class="col-md-10">
                <div class="row">
                    <label asp-for="City.CityCode" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <select id="cityList" asp-for="City.CityCode" class="form-control" asp-items="@Model.City.CityList"></select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div data-region="@AddressType.Locality" data-radio-identifier="deleveryType" style="display: @(Model.DeliveryLocationType==AddressType.Locality?"block":"none")">
        <div class="form-group">
            <div class="col-md-10">
                <div class="row">
                    <label asp-for="Locality.LocalityCode" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <select id="localityList" asp-for="Locality.LocalityCode" class="form-control" asp-items="@Model.Locality.LocalityList"></select>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <div class="row">
                    <label asp-for="Locality.LocationCode" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <select id="locationList" asp-for="Locality.LocationCode" class="form-control" asp-items="@Model.Locality.LocationList"></select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md- col-md-10">
            <div class="row">
                <label asp-for="Address" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <textarea asp-for="Address" class="form-control"></textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">Сохранить</button>
        </div>
    </div>
</form>